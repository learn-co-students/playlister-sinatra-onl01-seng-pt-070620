<form action="/songs/<%= @song.slug %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch" >
    <p>
        Name: <input type="text" name="name" id="Name" value="<%= @song.name %>" >
    </p>
    
    <p>
        Artist Name: <input type="text" name="artist_name" id="Artist Name" value="<%= @song.artist.name %>" >
    </p>

    <% @genres.each do |genre| %>
        <input type="checkbox" name="genre_ids[]" id="<%= genre.name %>" value="<%= genre.id %>" <%='checked' if @song.genres.include?(genre) %> ><%= genre.name %></input><br>
    <% end %>

    <input type="submit" value="submit" id="Save">
    
</form>